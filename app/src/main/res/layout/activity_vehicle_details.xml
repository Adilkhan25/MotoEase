<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bc_colour"
    tools:context=".activities.VehicleDetailsActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_vehicle_details_activity"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="?attr/actionBarSize">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Vehicle Details"
            android:textColor="@color/text_color"
            android:textSize="@dimen/toolbar_title_text_size"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>
        <ScrollView
            android:id="@+id/sv_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_vehicle_details_activity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="@dimen/btn_book_now_margin_from_side"
            android:fillViewport="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_vehicle_main_image"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/hot_offer"
                    />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_vehicle_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/name_vehicle_text_size"
                            android:gravity="start"
                            android:layout_weight="1"
                            android:textColor="@color/text_color"
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"
                            android:text="@string/specs"
                            />
                        <TextView
                            android:id="@+id/tv_vehicle_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/name_vehicle_text_size"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:textColor="@color/text_color"
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"
                            android:text="@string/specs"
                            />
                    </LinearLayout>

                    <RatingBar
                        android:id="@+id/tv_vehicle_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_marginTop="@dimen/btn_book_now_margin_from_side"
                        android:layout_marginBottom="@dimen/btn_book_now_margin_from_side"
                        android:numStars="5"
                        android:stepSize="0.1"
                        android:isIndicator="true" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/vehicle_details_divider_height"
                    android:layout_marginTop="2dp"
                    android:background="@color/text_color_type" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/name_vehicle_text_size"
                    android:gravity="start"
                    android:textColor="@color/text_color"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:text="@string/specs"
                    android:layout_marginBottom="@dimen/btn_book_now_margin_from_side"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:layout_weight="1"
                        android:elevation="@dimen/card_view_elevation"
                        android:layout_margin="@dimen/hot_offer_margin"
                        app:cardCornerRadius="@dimen/card_view_corner_radius">
                        <TextView
                            android:id="@+id/tv_max_power"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/max_power"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/name_vehicle_text_size"
                            android:padding="@dimen/features_side_padding"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:layout_weight="1"
                        android:elevation="@dimen/card_view_elevation"
                        android:layout_margin="@dimen/hot_offer_margin"
                        app:cardCornerRadius="@dimen/card_view_corner_radius">
                        <TextView
                            android:id="@+id/tv_top_speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/top_speed"
                            android:textColor="@color/text_color"
                            android:padding="@dimen/features_side_padding"
                            android:textSize="@dimen/name_vehicle_text_size"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:layout_weight="1"
                        android:elevation="@dimen/card_view_elevation"
                        android:layout_margin="@dimen/hot_offer_margin"
                        app:cardCornerRadius="@dimen/card_view_corner_radius">
                        <TextView
                            android:id="@+id/tv_motor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/motor"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/name_vehicle_text_size"
                            android:padding="@dimen/features_side_padding"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/vehicle_details_divider_height"
                    android:layout_marginTop="2dp"
                    android:background="@color/text_color_type" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/name_vehicle_text_size"
                    android:gravity="start"
                    android:textColor="@color/text_color"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:text="@string/features"
                    android:layout_marginBottom="@dimen/btn_book_now_margin_from_side"
                    />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/tv_ac"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/features_text_size"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:textColor="@color/text_color"
                    android:layout_marginTop="5dp"
                    android:text="@string/air_condition"
                    android:textStyle="bold"
                    android:padding="@dimen/features_side_padding"
                    />
                <TextView
                    android:id="@+id/tv_music"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/features_text_size"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/btn_book_now_margin_from_side"
                    android:textColor="@color/text_color"
                    android:layout_marginTop="5dp"
                    android:text="@string/music"
                    android:textStyle="bold"
                    android:padding="@dimen/features_side_padding"
                    />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/btn_book_now_margin_from_side"
                    >
                    <TextView
                        android:id="@+id/tv_seater"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/features_text_size"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:textColor="@color/text_color"
                        android:layout_marginTop="5dp"
                        android:text="@string/seater"
                        android:textStyle="bold"
                        android:padding="@dimen/features_side_padding"
                        />
                    <TextView
                        android:id="@+id/tv_gps"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/features_text_size"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/btn_book_now_margin_from_side"
                        android:textColor="@color/text_color"
                        android:layout_marginTop="5dp"
                        android:text="@string/gps"
                        android:textStyle="bold"
                        android:padding="@dimen/features_side_padding"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/btn_book_now_margin_from_side"

                    >
                    <TextView
                        android:id="@+id/back_camera"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/features_text_size"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:textColor="@color/text_color"
                        android:layout_marginTop="5dp"
                        android:text="@string/back_camera_available"
                        android:textStyle="bold"
                        android:padding="@dimen/features_side_padding"
                        />
                    <TextView
                        android:id="@+id/tv_run_on"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/features_text_size"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/btn_book_now_margin_from_side"
                        android:textColor="@color/text_color"
                        android:layout_marginTop="5dp"
                        android:text="@string/petrol"
                        android:textStyle="bold"
                        android:padding="@dimen/features_side_padding"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/vehicle_details_divider_height"
                    android:layout_marginTop="2dp"
                    android:background="@color/text_color_type" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/name_vehicle_text_size"
                    android:gravity="start"
                    android:textColor="@color/text_color"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:text="@string/more_images"
                    android:layout_marginBottom="@dimen/btn_book_now_margin_from_side"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/btn_book_now_margin_from_side"
                    >
                    <ImageView
                        android:id="@+id/iv_pri_image"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:src="@drawable/hot_offer"
                        />
                    <ImageView
                        android:id="@+id/iv_sec_image"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:layout_weight="1"
                        android:src="@drawable/hot_offer"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/btn_book_now_margin_from_side"
                    >
                    <ImageView
                        android:id="@+id/iv_ter_image"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:src="@drawable/hot_offer"
                        />
                    <ImageView
                        android:id="@+id/iv_quad_image"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:layout_weight="1"
                        android:src="@drawable/hot_offer"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/vehicle_details_divider_height"
                    android:layout_marginTop="2dp"
                    android:background="@color/text_color_type" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/name_vehicle_text_size"
                    android:gravity="start"
                    android:textColor="@color/text_color"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:text="@string/vehicle_description"
                    android:layout_marginBottom="@dimen/btn_book_now_margin_from_side"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/features_text_size"
                    android:gravity="center"
                    android:textColor="@color/text_color"
                    android:textStyle="normal"
                    android:text="@string/description_ipsum"
                    android:layout_marginBottom="@dimen/btn_book_now_margin_from_side"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/vehicle_details_divider_end_height"
                    android:layout_marginTop="2dp"
                    android:background="@color/bc_colour" />
            </LinearLayout>
        </ScrollView>
    <Button
        android:id="@+id/btn_book_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/btn_book_now_margin_from_side"
        android:background="@drawable/shape_button_rounded"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:paddingTop="@dimen/btn_paddingTopBottom"
        android:paddingBottom="@dimen/btn_paddingTopBottom"
        android:text="@string/book_now"
        android:textColor="@android:color/white"
        android:textSize="@dimen/btn_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>