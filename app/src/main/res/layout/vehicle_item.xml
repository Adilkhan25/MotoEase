<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/item_vehicle_content_marginBottom"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">
        
        <ImageView
            android:id="@+id/iv_vehicle_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="center"
            android:src="@drawable/ic_nav_user"
            />
        <TextView
            android:id="@+id/tv_vehicle_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/name_vehicle_text_size"
            android:textColor="@color/text_color"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:padding="3dp"
            />
        <RatingBar
            android:id="@+id/tv_vehicle_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleSmall"
            android:numStars="5"
            android:stepSize="0.1"
            android:padding="3dp"
            android:isIndicator="true" />
        <TextView
            android:id="@+id/tv_vehicle_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/name_vehicle_text_size"
            android:textColor="@color/text_color"
            android:layout_marginTop="5dp"
            android:textStyle="normal"
            android:padding="3dp"
            />
        <TextView
            android:id="@+id/tv_vehicle_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/name_vehicle_text_size"
            android:textColor="@color/text_color"
            android:layout_marginTop="5dp"
            android:textStyle="normal"
            android:padding="3dp"
            />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_vehicle_divider_height"
        android:layout_marginTop="@dimen/item_vehicle_divider_marginTop"
        android:background="@color/text_color_type" />

</LinearLayout>